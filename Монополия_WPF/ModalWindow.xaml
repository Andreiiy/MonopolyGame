<Window x:Class="Monopoly_WPF.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly_WPF"
        mc:Ignorable="d"
        Title="ModalWindow" Height="450" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <Border BorderBrush="#FFFBF9F9" BorderThickness="2"  CornerRadius="5" HorizontalAlignment="Left" Height="409" Margin="4,5,0,0" VerticalAlignment="Top" Width="282">
            <Label x:Name="label1" Content="or" Margin="116,242,126,125.333" Foreground="#FFF20E0E" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="24"/>

        </Border>
        <Label x:Name="lNameFild" Content="Lamborghini" Margin="9,10,12.333,350.667" Foreground="#FFFAFAFA" FontSize="36" FontWeight="Bold" Padding="5,0,5,5" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="Image/backgraund/red.jpg"/>
            </Label.Background>
        </Label>

        <Label x:Name="lprice"  Content="45000$" Margin="67,78,74.333,293.667" Foreground="#FFFAFAFA" FontSize="24" FontWeight="Bold" Padding="5,0,5,5" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="Image/backgraund/yelow.jpg"/>
            </Label.Background>

        </Label>
        <Button x:Name="btnBay" Content="Buy" HorizontalAlignment="Left" Margin="44,189,0,0" VerticalAlignment="Top" Width="202" Height="42" Foreground="White" FontSize="24" FontWeight="Bold" BorderBrush="{x:Null}" Click="BtnBay_Click">
            <Button.Background>
                <ImageBrush ImageSource="Image/backgraund/red.jpg"/>
            </Button.Background>
        </Button>
       
        <Button x:Name="btnClose" Content="Close a window" HorizontalAlignment="Left" Margin="44,323,0,0" VerticalAlignment="Top" Width="202" Height="42" Foreground="White" FontSize="24" FontWeight="Bold" BorderBrush="{x:Null}" Click="BtnClose_Click">
            <Button.Background>
                <ImageBrush ImageSource="Image/backgraund/red.jpg"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
