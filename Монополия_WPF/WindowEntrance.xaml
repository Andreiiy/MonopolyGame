            <Button x:Name="btnRegistration" Grid.Column="1" Grid.Row="8" Margin="29.667,20.333,48.667,39" Grid.RowSpan="2" Height="25" Width="90" Style="{DynamicResource ButtonStyle2}" Click="btnRegistration_Click"/>
            <Label x:Name="lEntry" Grid.Column="1" Grid.Row="8" Content=""  Background="{x:Null}" Foreground="#FFEE900F" FontWeight="Bold" FontStyle="Italic" FontSize="18" Margin="9.667,44.333,14.667,7" Grid.RowSpan="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        </Grid>
    </Grid>
</Window>
