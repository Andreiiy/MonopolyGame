            <Label x:Name="label" Content="Welcome to Monopoly Club" Grid.Column="1" Grid.Row="1" Background="{x:Null}" Foreground="#FFF60F0F" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" FontWeight="Bold" Height="47" Margin="21.667,17,21.667,17.333" Width="378"/>
            <Label x:Name="label2" Content="  Enter UserName:" Grid.Row="1" Background="{x:Null}" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Grid.ColumnSpan="2" Height="37" Margin="421,76,0,37" Width="179" Grid.RowSpan="3"/>
            <Label x:Name="label3" Content="  Enter Password:" Grid.Row="3" Background="{x:Null}" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Grid.ColumnSpan="2" Height="32" Margin="421,36.333,0,0.333" Width="170" Grid.RowSpan="2"/>
            <TextBox x:Name="tbUserName" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Margin="11.667,5.333,16.667,0" FontSize="24" FontWeight="Bold" Height="34" Width="392" />
